@model IEnumerable<BibliotecaWebb.Models.Autor>
<link rel="stylesheet" href="~/css/Styletable.css" asp-append-version="true" />

<center>
    <h1>Lista De Autores</h1>
</center>

<div class="table-responsive-vertical shadow-z-1">
    <table id="table" class="custom-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombres Autor</th>
                <th>Libros</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var autor in Model)
            {
                <tr>
                    <td>@autor.AutorID</td>
                    <td>@autor.Nombre</td>
                    <td>
                        @if (autor.Libros != null && autor.Libros.Any())



                        {
                            <ul>
                                @foreach (var libro in autor.Libros)



                                {
                                    <li>@libro.Titulo</li>
                                }
                            </ul>
                        }



                        else



                        {
                            <span>Sin libros</span>
                        }
                    </td>
                    <td style="color: rgb(75, 179, 49); cursor: pointer">
                        Vendido
                    </td>
                    <td>
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16" style="color: red;">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
  <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
</svg>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
